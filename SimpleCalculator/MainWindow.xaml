<Window x:Class="SimpleCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        FontSize="14"
        FontFamily="Consolas"
        WindowStartupLocation="CenterScreen"
        Title="Simple Calculator">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="32" />
        </Grid.RowDefinitions>

        <!-- Primary Notepad -->
        <ListView x:Name="NotepadLV"
                  ItemsSource="{Binding OutputLog}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="> " Visibility="{Binding IsAnswer, Converter={StaticResource BoolInverseVisibilityCollapseConverter}}" />
                        <TextBlock Text="{Binding Message}" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Primary Input -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="32" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="InputDecorationTB" Text=">" FontSize="24" TextAlignment="Center" HorizontalAlignment="Center" />
            <TextBox x:Name="InputTB" Grid.Column="1" VerticalContentAlignment="Center" FontSize="14" KeyUp="InputTB_KeyUp" />
        </Grid>

        <!-- Sidebar -->
        <Grid RowDefinitions="Auto, *, Auto, *" 
              MinWidth="300"
              Grid.Column="1" 
              Grid.RowSpan="3">

            <TextBlock Text="Constants" />

            <ListView x:Name="ConstantsLV" 
                      Grid.Row="1"
                      ItemsSource="{Binding Constants}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid ColumnDefinitions="Auto, *">
                            <TextBlock Text="{Binding Symbol}" />
                            <TextBlock Text="{Binding Value}" Grid.Column="1" />
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <TextBlock Text="Functions" Grid.Row="2" />

            <ListView x:Name="FunctionsLV" 
                      Grid.Row="3"
                      ItemsSource="{Binding Functions}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid ColumnDefinitions="Auto, *">
                            <TextBlock Text="{Binding Symbol}" />
                            <TextBlock Text="{Binding Expression}" Grid.Column="1" />
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>

    </Grid>
</Window>
